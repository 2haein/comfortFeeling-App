<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:id="@+id/completion_fragment"
    android:padding="16dp"
    tools:context=".ui.completion.CompletionFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="621dp"
        android:layout_weight="1"
        android:background="#FFFFFF"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:text="작성일" />

                <TextView
                    android:id="@+id/date_tv"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#eeeeee"
                    android:padding="16dp" />

                <Button
                    android:id="@+id/edit_btn"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="글 수정" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="350dp"
                android:layout_height="69dp">

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="65dp"
                    android:layout_height="64dp"
                    android:layout_marginTop="4dp"
                    android:src="@drawable/emotion1" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="65dp"
                    android:layout_height="64dp"
                    android:layout_marginTop="4dp"
                    android:src="@drawable/emotion2" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="65dp"
                    android:layout_height="64dp"
                    android:layout_marginTop="4dp"
                    android:src="@drawable/emotion3" />

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="65dp"
                    android:layout_height="64dp"
                    android:layout_marginTop="4dp"
                    android:src="@drawable/emotion4" />

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="65dp"
                    android:layout_height="64dp"
                    android:layout_marginTop="4dp"
                    android:src="@drawable/emotion5" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="198dp"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:text="내용"
                    android:textColor="@color/black"
                    android:textSize="19dp"
                    android:textStyle="bold" />

                <Switch
                    android:id="@+id/switch1"
                    android:layout_width="102dp"
                    android:layout_height="48dp"
                    android:checked="true"
                    android:text="댓글창"
                    app:layout_constraintBottom_toTopOf="@+id/emotion_relative"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.936"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.92" />

            </LinearLayout>


            <EditText
                android:id="@+id/content_tv"
                android:layout_width="match_parent"
                android:layout_height="115dp"
                android:ems="10"
                android:gravity="start|top"
                android:inputType="textMultiLine"
                android:background="#eeeeee"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:padding="16dp" />

            <TextView
                android:id="@+id/comment_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="댓글" />

            <LinearLayout
                android:id="@+id/comment_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/comment_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/comment_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#eeeeee"
            android:hint="댓글 내용을 입력하세요"
            android:padding="10dp"
            tools:ignore="TouchTargetSizeCheck" />

        <Button
            android:id="@+id/reg_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="등록하기"
            tools:ignore="TouchTargetSizeCheck" />
    </LinearLayout>
</LinearLayout>